{
  "name": "backend",
  "version": "0.0.1",
  "license": "UNLICENSED",
  "scripts": {
    "commit": "cz",
    "build": "rm -rf dist && tsc --project tsconfig-build.json && tscpaths -p tsconfig.json -s ./src -o ./dist/",
    "start": "node ./dist/server.js",
    "start:dev": "ts-node-dev -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify src/server.ts",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "yarn lint --fix",
    "test": "NODE_ENV=test jest --runInBand --forceExit"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^5.8.0",
    "reflect-metadata": "^0.1.13",
    "uuid": "^9.0.0",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^18.7.9",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@typescript-eslint/parser": "^5.34.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^8.14.0",
    "prettier": "^2.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix"
  }
}
